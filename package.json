    "prettier": "^2.8.4",
    "prisma": "^4.10.1",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "*",
    "vite": "latest",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "latest"
  },
  "lint-staged": {
    "*.ts|tsx": [
      "yarn lint:fix --max-warnings=0",
      "yarn prettier:write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
